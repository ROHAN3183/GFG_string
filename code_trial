const express = require('express');
const router = express.Router();
const Problem = require('../models/Problem');

// @route   POST /api/problems/add
// @desc    Add a new problem
// @access  Public (for now; you can secure later)
router.post('/add', async (req, res) => {
  try {
    const newProblem = new Problem(req.body);
    await newProblem.save();
    res.status(201).json({ msg: 'Problem added successfully' });
  } catch (err) {
    res.status(500).json({ msg: 'Failed to add problem', error: err.message });
  }
});

// @route   GET /api/problems
// @desc    Get all problems
// @access  Public
router.get('/', async (req, res) => {
  try {
    const problems = await Problem.find();
    res.json(problems);
  } catch (err) {
    res.status(500).json({ msg: 'Failed to fetch problems', error: err.message });
  }
});

module.exports = router;
